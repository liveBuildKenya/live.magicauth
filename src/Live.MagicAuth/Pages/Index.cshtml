@page "/"
@model Live.MagicAuth.Pages.IndexModel
@{
    Layout = "_Layout";
}

@* <h1>Welcome to MagicAuth</h1> *@
<!-- Animated Background -->
<div class="particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
</div>

<!-- Header -->
<header class="header">
    <nav class="nav">
        <a href="/" class="logo">MagicAuth</a>
        <ul class="nav-links">
            <li><a href="#features">Features</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
        <div class="auth-buttons">
            <a href="/auth/login" class="btn btn-outline">Login</a>
            <a href="/auth/register" class="btn btn-solid">Sign Up</a>
        </div>
    </nav>
</header>

<!-- Main Content -->
<main class="main">
    <!-- Hero Section -->
    <section class="hero">
        <h1>Welcome to MagicAuth</h1>
        <p>Experience seamless authentication with our secure, modern system. Your journey to protected access starts here.</p>
        <a href="#features" class="cta-button">Explore Features</a>
    </section>

    <!-- Features Section -->
    <section class="features" id="features">
        <div class="feature-card">
            <div class="feature-icon">👆</div>
            <h3>Biometric Authentication</h3>
            <p>Login seamlessly using fingerprint, Face ID, or Windows Hello. Your unique biometric signature provides the ultimate security and convenience.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">🔑</div>
            <h3>Hardware Security Keys</h3>
            <p>Support for USB security keys like YubiKey and other FIDO2-compliant devices. Physical keys provide unbreakable two-factor authentication.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">🛡️</div>
            <h3>Platform Authenticators</h3>
            <p>Native integration with Windows Hello, Touch ID, and Android biometrics. Use your device's built-in security features for passwordless login.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">🔐</div>
            <h3>Multi-Factor Security</h3>
            <p>Combine multiple authentication methods for maximum protection. Mix biometrics, hardware keys, and traditional passwords as needed.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">⚡</div>
            <h3>Lightning Fast</h3>
            <p>Passwordless authentication means instant access. No more typing passwords - just tap, scan, or plug in your security key.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon">📱</div>
            <h3>Cross-Platform Support</h3>
            <p>Works seamlessly across desktop, mobile, and web platforms. Your authentication preferences sync across all your devices.</p>
        </div>
    </section>
</main>