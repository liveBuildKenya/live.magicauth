@page "/auth/{operation}"
@model Live.MagicAuth.Pages.AuthModel
@using Live.MagicAuth.Pages
@{
    ViewData["Title"] = Model.Operation == "register" ? "Register" : "Login";
    Layout = "_Layout";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <!-- Left Section -->
        <div class="auth-left">
            <img src="~/images/doctor.jpg" alt="Company Image" class="hero-img" />
            <div class="promo-text">
                <h2 class="brand">Company Name</h2>
                <h3>Company Slogan</h3>
                <p>
                    Company Brand Statement.
                </p>
            </div>
        </div>

        <!-- Right Section -->
        <div class="auth-right">
            <h1>@ViewData["Title"]</h1>

            <form id="@Model.Operation.ToLower()">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required />
                </div>

                @if (string.Equals(Model.Operation, AuthOperations.Register, StringComparison.InvariantCultureIgnoreCase))
                {
                    <div class="form-group">
                        <label for="displayName">Display Name</label>
                        <input type="text" id="displayName" name="displayName" required />
                    </div>
                }

                <button type="submit" class="btn submit">@Model.Operation</button>
            </form>
            @if(string.Equals(Model.Operation, AuthOperations.Login, StringComparison.InvariantCultureIgnoreCase))
            {
                <p class="signup-text">
                    Not a Member yet? <a href="/auth/register">Sign Up</a>
                </p>
            } else
            {
                <p class="signup-text">
                    Have an account? <a href="/auth/login">Login</a>
                </p>
            }
        </div>
    </div>
</div>

@if (string.Equals(Model.Operation, AuthOperations.Register, StringComparison.InvariantCultureIgnoreCase))
{
    <script src="~/js/register.js"></script>
}
else if (string.Equals(Model.Operation, AuthOperations.Login, StringComparison.InvariantCultureIgnoreCase))
{
    <script src="~/js/login.js"></script>
}
